<h1>Listing events</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Start at</th>
    <th>End at</th>
    <th>All day</th>
    <th>Friends</th>
    <th>Carpool seats</th>
    <th>Created at</th>
    <th>Updated at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.name %></td>
    <td><%= event.start_at %></td>
    <td><%= event.end_at %></td>
    <td><%= event.all_day %></td>
    <td><%= event.friends %></td>
    <td><%= event.carpool_seats %></td>
    <td><%= event.created_at %></td>
    <td><%= event.updated_at %></td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Destroy', event, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

